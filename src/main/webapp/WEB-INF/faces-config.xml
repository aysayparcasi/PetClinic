<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    <converter>
        <converter-id>petTypeConverter</converter-id>
        <converter-class>com.example.petClinicJSF.converter.PetTypeConverter</converter-class>
    </converter>
    <converter>
        <converter-id>ownerConverter</converter-id>
        <converter-class>com.example.petClinicJSF.converter.OwnerConverter</converter-class>
    </converter>
    <converter>
        <converter-id>petConverter</converter-id>
        <converter-class>com.example.petClinicJSF.converter.PetConverter</converter-class>
    </converter>
    <converter>
        <converter-id>vetConverter</converter-id>
        <converter-class>com.example.petClinicJSF.converter.VetConverter</converter-class>
    </converter>
    <converter>
        <converter-id>specialtyConverter</converter-id>
        <converter-class>com.example.petClinicJSF.converter.SpecialtyConverter</converter-class>
    </converter>



</faces-config>